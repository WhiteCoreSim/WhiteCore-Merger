    </Runtime>

    <Dependencies>
        <Addin id="OpenSim" version="0.5" />
    </Dependencies>

    <Extension path = "/OpenSim/RegionModules">
        <RegionModule id="LLStandaloneLoginModule" type="OpenSim.Client.Linden.LLStandaloneLoginModule" />
